<%= form_with(model: property) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :product%>
    <%= form.collection_select :product_id, Product.all, :id, :title%>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>

  <div class="field">
    <%= form.label :quantity_in_stock %>
    <%= form.text_field :quantity_in_stock %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <%= image_tag property.image_url.to_s %>
    <%= form.check_box :remove_image %>Xóa ảnh
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
